@model School.Models.Medical
@{
    ViewBag.Title = "Medical";
}

<h2>Medical & other information</h2>

@using (Html.BeginForm("Medical", "Registration", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <p>Do you require accomodation in an Elsenburg hostel? <input type="checkbox" name="Accomodation" value="true" /></p>
        <br />
        <p>Do you suffer from any of the following?</p>
        <br />
        <p>(Information required for the benefit of disadvantaged people)</p>
        <br />
        <p><input type="checkbox" name="BadEyesight" value="true" /> Bad Eyesight</p>
        <br />
        <p><input type="checkbox" name="CerebralPalsy" value="true" /> Cerebral Palsy</p>
        <br />
        <p><input type="checkbox" name="Deafness" value="true" /> Deafness</p>
        <br />
        <p><input type="checkbox" name="BadEyesight" value="true" /> Speech Defect</p>

        <div class="form-group">
            @Html.LabelFor(model => model.Other, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Other, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Other, "", new { @class = "text-danger" })
            </div>
        </div>

        <p>Do you make use of a wheelchair? <input type="checkbox" name="Wheelchair" value="true" /> </p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p align="right">
                    <input type="submit" value="Save/Next" class="btn btn-success btn-sm next pull-right" />
                </p>
            </div>
        </div>
    </div>

}
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <form action="Bursary">
            <input type="submit" value="Back" class="btn btn-success btn-danger" />
        </form>
    </div>
</div>
